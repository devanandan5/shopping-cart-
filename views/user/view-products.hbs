<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
        <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem; height:26rem">
            <img
              style=" height:12rem"
              class="card-img-top"
              src="/product-images/{{this._id}}.jpg"
              alt="Card image cap"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text">Rs.{{this.price}}</p>
              <p class="card-text">{{this.Description}}</p>
              <!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>-->
              <button
                onclick="addToCart('{{this._id}}')"
                class="btn btn-primary"
              >Add to Cart</button>
            </div>
          </div>
        </div>
      {{/each}}
      <!--card end-->

    </div>
  </div>
</section>